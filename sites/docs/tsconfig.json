{
  "extends": "../../tsconfig.json",
  "declaration": false,
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["libs.d.ts"],
    "jsx": "preserve",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "incremental": true,
    "strict": false,
    "strictFunctionTypes": true
  },
  "exclude": ["node_modules", "scripts/**", "build/**"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "libs.d.ts",
  ]
}
